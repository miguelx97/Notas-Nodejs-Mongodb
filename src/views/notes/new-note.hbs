{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/each}}



<div class="col-md-6 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="Titulo de la nota" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Desctription">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Officia, iste!</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary brn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
